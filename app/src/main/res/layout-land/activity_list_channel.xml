<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="berthet.johann.channelmessaging.fragment.ChannelListFragment"
        android:id="@+id/channelListFragment"
        tools:layout="@layout/fragment_listchannel" />

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="berthet.johann.channelmessaging.fragment.MessageListFragment"
        android:id="@+id/messageListFragment"
        tools:layout="@layout/fragment_listmessage" />

</LinearLayout>